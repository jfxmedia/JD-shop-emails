{% capture shop_name %}Jean Dousset{% endcapture %}


<!DOCTYPE html>
<html lang="en">
{% comment %}
STYLING
{% endcomment %}

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width">
  <title>{{ email_title }}</title>
  <style type="text/css">
    @font-face {
      font-family: "Cambon-Italic";
      src: url("{{ 'Cambon-Italic.woff' | file_url }}") format("woff");
    }

    ,
    @font-face {
      font-family: "Cambon-Light";
      src: url("{{ 'Cambon-Light.woff' | file_url }}") format("woff");
    }

    ,
    @font-face {
      font-family: "Cambon-LightItalic";
      src: url("{{ 'Cambon-LightItalic.woff' | file_url }}") format("woff");
    }

    ,
    @font-face {
      font-family: "Cambon-Thin";
      src: url("{{ 'Cambon-Thin.woff' | file_url }}") format("woff");
    }

    ,
    @font-face {
      font-family: "Cambon-ThinItalic";
      src: url("{{ 'Cambon-ThinItalic.woff' | file_url }}") format("woff");
    }

    ,
    @font-face {
      font-family: "Synthese-Light";
      src: url("{{ 'Synthese-Light.woff' | file_url }}") format("otf");
    }

    ,
    body {
      width: 100%;
      background: #f5f5f5;
      -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
      margin: 0;
      padding: 0;
    }

    body,
    p,
    td,
    li,
    a,
    span {
      font-size: 14px;
      font-family: Synthese-Light, Verdana, Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
    }

    img {
      outline: none;
      text-decoration: none;
      -ms-interpolation-mode: bicubic;
    }

    a img {
      border: none;
    }

    p {
      margin: 0;
      font-size: 14px;
      font-weight: 400;
      line-height: 24px;
    }

    h1 {
      font-weight: 200;
      font-family: Cambon-ThinItalic, Verdana, Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
    }

    h2,
    h3 {
      margin: 0;
      margin-bottom: 10px;
      text-align: left;
      text-transform: uppercase;
      color: #3A3F51;
      font-weight: 700;
      font-size: 1.1em;
      font-family: Synthese-Light, Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
    }

    table {
      color: #000;
    }

    table td {
      border-collapse: collapse;
      color: #000000;
    }

    a,
    a:active,
    a:visited,
    a:link {
      text-decoration: none;
      color: #000000;
    }

    .button,
    .button:hover,
    .button:active,
    .button:visited {
      color: #fff;
      text-decoration: none;
    }

    .button__text {
      background: #3A3F51;
      font-weight: 700;
      font-size: 14px;
      color: #fff !important;
      text-transform: uppercase;
      padding: 7px 25px;
    }

    .row.actions {
      margin: 20px auto;
      text-align: center;
    }

    .link.secondary-action-cell {
      margin: 0 auto;
    }

    .summary table {
      width: 100%;
    }

    .summary>td {
      padding: 30px 0 0;
    }

    .summary .items .item>td {
      padding: 22px 0;
      border-bottom: 1px solid #E3E3E3;
    }

    .summary .items .item .info {
      vertical-align: top;
    }

    .summary .items .item .info p {
      margin: 0;
    }

    .summary .items .item .info strong {
      font-size: inherit !important;
      font-weight: 200 !important;
    }

    .summary .items .item .price {
      vertical-align: top;
      font-weight: light;
    }

    .summary .subtotals {
      padding-top: 12px;
    }

    .summary .subtotals .total td {
      font-weight: light;
      font-size: 16px;
      padding-top: 15px;
    }

    .summary .price {
      text-align: right;
      color: #3A3F51;
    }

    .customer-info td {
      vertical-align: top;
    }

    .customer-info .cell {
      padding-bottom: 30px;
    }

    .customer-info-title {
      font-size: 14px;
      font-weight: 200;
      border-bottom: 1px solid #E3E3E3;
      padding-bottom: 10px;
      margin-bottom: 7px !important;
    }

    .qty {
      font-size: 12px;
      line-height: 21px;
    }

    .content__cell {
      padding: 20px 0
    }
  </style>
</head>

<body>
  <table style="width: 100%;">
    <tr>
      <td style="padding: 60px 10px; background-color: #f5f5f5;" cellpadding="0" cellspacing="0">
        <center>
          <table border="0" cellpadding="0" cellspacing="0"
            style="background-color: #ffffff; width: 540px; margin: auto; text-align: center;">
            <tr>
              <td>
                <table width="100%" border="0" cellpadding="0" cellspacing="0">
                  {% comment %}
                  HEADER
                  {% endcomment %}
                  <tr style="background-color: #000;">
                    <td align="center" style="padding-top: 24px; padding-bottom: 24px;">
                      <a href="{{shop.url}}">
                        <img src="{{shop.email_logo_url}}" width="{{ shop.email_logo_width }}" />
                      </a>
                    </td>
                  </tr>
                  <tr>
                    <td style="padding: 0 30px; padding-top: 41px; padding-bottom: 41px; text-align: left;">
                      <table width="100%" border="0" cellpadding="0" cellspacing="0">
                        <tr>
                          <td style="text-align: left;">
                            <span style="color: #000; font-size: 20px; font-weight: 200; line-height: 26px;">
                              ORDER {{ order.name }}
                            </span>
                          </td>
                        </tr>
                        {%- if po_number %}
                        <tr>
                          <td class="po-number__cell">
                            <span class="po-number__text">
                              Purchase order number #{{ po_number }}
                            </span>
                          </td>
                        </tr>
                        {%- endif %}


                        <tr>
                          <td class="content__cell">
                            <center>
                              <table class="container">
                                <tr>
                                  <td>

                                    {% for return_delivery in return.deliveries %}
                                    {% if return_delivery.type == 'shopify_label' %}
                                    <h2>Your return shipping label is ready</h2>
                                    <p class="return-creation__subtitle">Print your return shipping label and attach it
                                      to the package
                                      containing your return items</p>
                                    <table class="row actions">
                                      <tr>
                                        <td class="empty-line">&nbsp;</td>
                                      </tr>
                                      <tr>
                                        <td class="actions__cell">
                                          <table class="button main-action-cell">
                                            <tr>
                                              <td class="button__cell"><a
                                                  href="{{ return_delivery.return_label.public_file_url }}"
                                                  class="button__text">Print return label</a></td>
                                            </tr>
                                          </table>
                                          <table class="link secondary-action-cell">
                                            <tr>
                                              <td class="link__cell">or <a target="_blank"
                                                  href="{{ order.order_status_url }}">View your
                                                  order</a></td>
                                            </tr>
                                          </table>
                                        </td>
                                      </tr>
                                    </table>

                                    {% elsif return_delivery.type == 'manual' %}
                                    <h1
                                      style="font-weight: 200; margin-top: 0; line-height: 36px; font-size: 34px; margin-bottom: 19px; color: #000;">
                                      Complete your return</h1>
                                    <p class="return-creation__subtitle">
                                    <div class="return-creation__subtitle-bold">We’ve sent you a return shipping label,
                                      or you will receive
                                      one soon.</div><br>
                                    Once you receive your return shipping label, get your returned items and follow the
                                    instructions to
                                    complete your return.
                                    </p>
                                    {% endif %}
                                    {% endfor %}

                                  </td>
                                </tr>
                              </table>
                            </center>
                          </td>
                        </tr>



                        <tr class="summary">
                          <td style="padding-top: 11px;">
                            <h2 class="customer-info-title"
                              style="color:#3A3F51;margin-bottom: 0 !important; font-size: 20px; font-family: synthese-light; font-weight: 200">
                              Returned Items</h2>
                            <table class="container">
                              <tr>
                                <td>

                                  <table class="row">
                                    {% for line_item in return.line_items %}
                                    <tr class="order-list__item">
                                      <td class="order-list__item__cell">
                                        <table style="border-bottom:1px solid #e3e3e3; padding: 12px 0;">
                                          <td>
                                            {% if line_item.image %}
                                            <img src="{{ line_item | img_url: 'compact_cropped' }}" align="left"
                                              width="60" height="60" class="order-list__product-image" />
                                            {% endif %}
                                          </td>
                                          <td class="order-list__product-description-cell" style="">
                                            {% assign line_display = line_item.quantity %}

                                            <span class="order-list__item-title"
                                              style="display:flex;align-items:flex-start">{{ line_item.title
                                              }}&nbsp;&times;&nbsp;{{ line_display
                                              }}</span><br />

                                            {% if line_item.variant_title != 'Default Title' %}
                                            <span class="order-list__item-variant"
                                              style="display:flex;align-items:flex-start">{{ line_item.variant_title
                                              }}</span><br />
                                            {% endif %}

                                            {% if line_item.discount_allocations %}
                                            {% for discount_allocation in line_item.discount_allocations %}
                                            <span class="order-list__item-discount-allocation"
                                              style="text-align:right;">
                                              <img src="{{ 'notifications/discounttag.png' | shopify_asset_url }}"
                                                width="18" height="18" class="discount-tag-icon" />
                                              <span>
                                                {{ discount_allocation.discount_application.title | upcase }}
                                                (-{{ discount_allocation.amount | money }})
                                              </span>
                                            </span>
                                            {% endfor %}
                                            {% endif %}
                                          </td>

                                          <td class="order-list__price-cell" style="text-align:right;">
                                            {% if line_item.original_line_price != line_item.final_line_price %}
                                            <del class="order-list__item-original-price">{{
                                              line_item.original_line_price | money }}</del>
                                            {% endif %}
                                            <p class="order-list__item-price">
                                              {% if line_item.final_line_price > 0 %}
                                              {{ line_item.final_line_price | money }}
                                              {% else %}
                                              Free
                                              {% endif %}
                                            </p>
                                          </td>
                                        </table>
                                      </td>
                                    </tr>
                                    {% endfor %}
                                  </table>


                                </td>
                              </tr>
                            </table>
                          </td>
                        </tr>

                      </table>
                    </td>
                  </tr>
                  {% comment %}
                  INSTRUCTIONS
                  {% endcomment %}
                  <table>
                    <tr>
                      <td>
                        <center>
                          <table style="text-align:left;display: flex;padding:0 27px;">
                            <tr>
                              <td>
                                <h2 class="customer-info-title"
                                  style="text-align:left;color:#3A3F51;margin-bottom: 0 !important; font-size: 20px; font-family: synthese-light; font-weight: 200">
                                  Instructions</h2>
                              </td>
                            </tr>
                          </table>
                          <table>
                            <tr>
                              <td>

                                {% for return_delivery in return.deliveries %}
                                <ol>
                                  <li class="return-label__instruction-step" style="padding:4px 0;">Pack the items
                                    you're returning.</li>

                                  {% if return_delivery.type == 'shopify_label' %}
                                  <li class="return-label__instruction-step" style="padding:4px 0;">Print your return
                                    shipping label and attach
                                    it to the
                                    package. Cover or remove any old shipping labels.</li>
                                  <li class="return-label__instruction-step" style="padding:4px 0;">
                                    {% if return_delivery.carrier_name %}
                                    Give the package to {{ return_delivery.carrier_name }}.
                                    {% else %}
                                    Give the package to the carrier identified on the label.
                                    {% endif %}
                                  </li>
                                  {% elsif return_delivery.type == 'manual' %}
                                  <li class="return-label__instruction-step" style="padding:4px 0;">Print your return
                                    shipping label. If you
                                    haven’t received
                                    it yet, we’ll send it to you soon.</li>
                                  <li class="return-label__instruction-step" style="padding:4px 0;">Attach the label to
                                    the package. Cover or
                                    remove any old
                                    shipping labels.</li>
                                  <li class="return-label__instruction-step" style="padding:4px 0;">
                                    {% if return_delivery.carrier_name %}
                                    Give the package to {{ return_delivery.carrier_name }}.
                                    {% else %}
                                    Give the package to the carrier identified on the label.
                                    {% endif %}
                                  </li>
                                  <li class="return-label__instruction-step" style="padding:4px 0;">
                                    Track your return using <a target="_blank"
                                      href="{{ return_delivery.tracking_url) }}">your tracking
                                      number</a> to make sure we get it.
                                  </li>
                                  {% endif %}

                                </ol>
                                {% endfor %}

                              </td>
                            </tr>
                          </table>
                        </center>
                      </td>
                    </tr>
                  </table>
                  {% comment %}
                  FOOTER
                  {% endcomment %}

                  <tr style="background-color: #16181F; text-align:center">
                    <td style="padding-bottom: 11px; padding-top: 34px; padding-left: 43px; padding-right: 48px;">

                      <table style="text-align: center">
                        <td style="width: 100%; text-align: center; padding-bottom: 20px">
                          <a href="{{shop.url}}">
                            <img
                              src="https://cdn.shopify.com/s/files/1/0651/0297/1135/files/Jean_Dousset_Icon_Logo_-_White.svg?v=1678486269"
                              width="34" />
                          </a>
                        </td>

                        <tr>
                          <td style="white-space: nowrap; width: 126px;">
                            <a style="margin-right: 40px;" target="_blank"
                              href="https://www.instagram.com/jeandousset/">
                              <img height="20"
                                src="https://cdn.shopify.com/s/files/1/0651/0297/1135/files/IG.png?v=1670351271" />
                            </a>
                            <a style="margin-right: 40px;" target="_blank" href="http://www.facebook.com/JeanDousset">
                              <img height="20"
                                src="https://cdn.shopify.com/s/files/1/0651/0297/1135/files/FB.png?v=1670351271" />
                            </a>
                            <a target="_blank" href="https://www.pinterest.com/jeandousset/">
                              <img height="20"
                                src="https://cdn.shopify.com/s/files/1/0651/0297/1135/files/Pinterest.png?v=1670351271" />
                            </a>
                          </td>
                        </tr>
                      </table>

                    </td>
                  </tr>


                  <tr>
                    <td
                      style="padding: 25px 15px; text-align: center; font-size: 12px; background: #16181F; color: #CCCCCC; font-family: Montserrat, Verdana, Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto';">
                      &copy; 2023 {{ shop_name }}. All Rights Reserved.
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </center>
      </td>
    </tr>
  </table>
</body>

</html>