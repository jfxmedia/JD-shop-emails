{% capture shop_name %}Jean Dousset{% endcapture %}


<!DOCTYPE html>
<html lang="en">
{% comment %}
STYLING
{% endcomment %}
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width">
  <title>{{ email_title }}</title>
  <style type="text/css">
  @font-face {
    font-family: "Cambon-Italic";
    src: url("{{ 'Cambon-Italic.woff' | file_url }}") format("woff");
  },
  @font-face {
    font-family: "Cambon-Light";
    src: url("{{ 'Cambon-Light.woff' | file_url }}") format("woff");
  },
  @font-face {
    font-family: "Cambon-LightItalic";
    src: url("{{ 'Cambon-LightItalic.woff' | file_url }}") format("woff");
  },
  @font-face {
    font-family: "Cambon-Thin";
    src: url("{{ 'Cambon-Thin.woff' | file_url }}") format("woff");
  },
  @font-face {
    font-family: "Cambon-ThinItalic";
    src: url("{{ 'Cambon-ThinItalic.woff' | file_url }}") format("woff");
  },
   @font-face {
    font-family: "Synthese-Light";
    src: url("{{ 'Synthese-Light.woff' | file_url }}") format("otf");
  },
body {width:100%; background: #fff; -webkit-text-size-adjust:100%; -ms-text-size-adjust:100%; margin:0; padding:0;}
body,p,td,li,a,span {font-size: 14px;font-family: Synthese-Light, Verdana, Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;}
img {outline:none; text-decoration:none; -ms-interpolation-mode: bicubic;}
a img {border:none;}
p {margin: 0; font-size: 14px; font-weight: 400; line-height: 24px;}
h1 { font-weight: 200; font-family: Cambon-ThinItalic, Verdana, Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;}
h2, h3 {margin: 0; margin-bottom: 10px; text-align: left; text-transform: uppercase; color: #3A3F51; font-weight: 700; font-size: 1.1em; font-family: Synthese-Light, Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;}

table {color: #000; width:100%;border-spacing: 0px!important;}
table td {border-collapse: collapse; color: #000000;}
a, a:active, a:visited, a:link {text-decoration: none; color: #000000;}
.button, .button:hover, .button:active, .button:visited {color: #fff; text-decoration: none;}
.button__text { margin: auto;width:fit-content;border: 1px solid #000;background: #fff; font-weight: 300; font-size: 14px; color: #000 !important; text-transform: uppercase; padding: 12px 30px;}
.row.actions { margin: 0 auto; text-align: center; }
.link.secondary-action-cell { margin: 0 auto; }

.customer-info td {vertical-align: top;}
.customer-info .cell {padding-bottom: 30px;}
.customer-info-title {font-size: 14px; font-weight: 200; padding-bottom: 10px; margin-bottom: 7px !important;}
.qty {font-size: 12px; line-height: 21px;}

  </style>
</head>

<body>
  <table style="width:100%;">
    <tr>
      <td>
        <table>
          {% comment %}
            HEADER
          {% endcomment %}
          <tr style="background-color: #000;">
            <td align="center" style="padding-top: 24px; padding-bottom: 24px;">
              <a href="{{shop.url}}">
                <img src="{{shop.email_logo_url}}" width="{{ shop.email_logo_width }}" />
              </a>
            </td>
          </tr>
          <tr>
            <td class="header__cell">
              <center>

                <table class="container">
                  <tr>
                    <td>

                      <table>
                        <tr>

                          <td>
                        <tr>
                          <td style="text-align: left; padding: 40px 0 0 27px;">
                            <span style="color: #3A3F51; font-size: 20px; font-weight: 200; line-height: 26px;">
                              ORDER {{ order.name }}
                            </span>
                          </td>
                        </tr>
                        {%- if po_number %}
                        <tr>
                          <td class="po-number__cell">
                            <span class="po-number__text">
                              Purchase order number #{{ po_number }}
                            </span>
                          </td>
                        </tr>
                        {%- endif %}
                    </td>
                  </tr>
                </table>

            </td>
          </tr>
        </table>

        </center>
      </td>
    </tr>
  </table>

  <table class="row content">
    <tr>
      <td class="content__cell">
        <center>
          <table class="container">
            <tr>
              <td>

              <tr>
                <td style="padding-bottom: 40px; padding-top: 16px; text-align: left;">
                  <h1 style="padding: 0 0 0 27px;font-weight: 200; margin-top: 0; line-height: 36px; font-size: 34px; margin-bottom: 19px; color: #000;">
                    Your return label is ready
                  </h1>
                </td>
              </tr>
                <table class="row actions">
                  <tr>
                    <td class="empty-line">&nbsp;</td>
                  </tr>
                  <tr>
                    <td class="actions__cell">
                      <table class="button main-action-cell">
                        <tr>
                          <td class="button__cell"><a href="{{ return_label.public_file_url }}"
                              class="button__text">Print return label</a></td>
                        </tr>
                      </table>
                      {% if shop.url %}
                      <table class="link secondary-action-cell" style="padding: 25px 0 10px 0;">
                        <tr>
                          <td class="link__cell">or <a style="text-decoration:underline;" href="{{ shop.url }}">Visit our store</a></td>
                        </tr>
                      </table>
                      {% endif %}

                    </td>
                  </tr>
                </table>


              </td>
            </tr>
          </table>
        </center>
      </td>
    </tr>
  </table>
  <table>
    <tr>
      <td style="padding:0 27px;">
        <center>
          <table style="text-align:left;border-bottom:1px solid #e3e3e3;">
            <tr>
              <td style="">
                <h2 class="customer-info-title"
              style="text-align:left;color:#3A3F51;margin-bottom: 0 !important; font-size: 20px; font-family: synthese-light; font-weight: 200">Instructions</h2>
              </td>
            </tr>
          </table>
          <table>
            <tr>
              <td>
                <ol style="padding-left:27px;">
                  <li class="return-label__instruction-step" style="padding:4px 0;">Pack the items you're returning.</li>
                  <li class="return-label__instruction-step" style="padding:4px 0;">Print your return label and attach it to the package. Cover any existing shipping labels.</li>
                  <li class="return-label__instruction-step" style="padding:4px 0;">Give the package to the carrier identified on the label.</li>
                </ol>
              </td>
            </tr>
          </table>

        </center>
      </td>
    </tr>
  </table>
  <table>
    <tr style="background-color: #16181F; text-align:center">
      <td style="padding-bottom: 11px; padding-top: 34px; padding-left: 43px; padding-right: 48px;">

      <table style="text-align: center">
          <td style="width: 100%; text-align: center; padding-bottom: 20px">
          <a href="{{shop.url}}">
          <img src="https://cdn.shopify.com/s/files/1/0651/0297/1135/files/Jean_Dousset_Icon_Logo_-_White.svg?v=1678486269" width="34" />
          </a>                              
          </td>

          <tr>
          <td style="white-space: nowrap; width: 126px;">
          <a style="margin-right: 40px;" target="_blank" href="https://www.instagram.com/jeandousset/">
          <img height="20" src="https://cdn.shopify.com/s/files/1/0651/0297/1135/files/IG.png?v=1670351271" />
          </a>
          <a style="margin-right: 40px;" target="_blank" href="http://www.facebook.com/JeanDousset">
          <img height="20" src="https://cdn.shopify.com/s/files/1/0651/0297/1135/files/FB.png?v=1670351271" />
          </a>
          <a target="_blank" href="https://www.pinterest.com/jeandousset/">
          <img height="20" src="https://cdn.shopify.com/s/files/1/0651/0297/1135/files/Pinterest.png?v=1670351271" />
          </a>
          </td>
          </tr>
      </table>

      </td>
      </tr>
<tr>
<td style="padding: 25px 15px; text-align: center; font-size: 12px; background: #16181F; color: #CCCCCC; font-family: Montserrat, Verdana, Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto';">
&copy; 2023 {{ shop_name }}. All Rights Reserved.
</td>
</tr>
  </table>


  </td>
  </tr>
  </table>
</body>

</html>